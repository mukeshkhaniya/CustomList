<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/prrofile_avatar"
        />

    <EditText
        android:id="@+id/addPrsName"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:hint="Name" />

    <EditText
        android:id="@+id/addPhone"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addPrsName"
        android:layout_marginTop="33dp"
        android:layout_weight="1"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:hint="Phone Number"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addCountry"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addPhone"
        android:layout_marginTop="33dp"
        android:layout_weight="1"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:hint="Country"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/addUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addCountry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:ems="5"
        android:text="Create User"
        />

</RelativeLayout>